<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <div class="container">
        <h1>To-Do List</h1>

        <input type="text" id="search" placeholder="Search tasks...">


        <button id="filter">Filter Completed</button>
        <button id="dark-mode">Dark Mode</button>

        <form action="/add-task" method="POST">
            <input type="text" name="text" placeholder="Add a new task" required>
            <button type="submit">Add Task</button>
        </form>

        <button id="clear-tasks">Clear All Tasks</button>

        <ul id="task-list">
            <% tasks.forEach(task => { %>
                <li data-id="<%= task.id %>" class="<%= task.completed ? 'completed' : '' %>">
                    <span class="task-text"><%= task.text %></span>
                    <span class="timestamp"><%= task.createdAt %></span>
                    <div class="task-actions">
                        <button class="toggle-btn">✔</button>
                        <button class="edit-btn">✏️</button>
                        <button class="delete-btn">X</button>
                    </div>
                </li>
            <% }); %>
        </ul>
    </div>

    <script src="/public/script.js"></script>
</body>
</html>
